# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URL for CORS
FRONTEND_URL=https://mindshield.example.com

# MongoDB Configuration
MONGO_URI=mongodb+srv://[username]:[password]@[cluster].mongodb.net/mindshield?retryWrites=true&w=majority

# JWT Secret
JWT_SECRET=your-strong-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100

# Security
OPEN_API_KEY=your-api-key-for-external-integrations

# Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# Caching
REDIS_URL=redis://localhost:6379